{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,      // 生成类型声明文件 .d.ts
    "outDir": "./dist",       // 输出目录
    "strict": true,           // 启用严格模式
    "esModuleInterop": true,  // 支持 ES 模块
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
